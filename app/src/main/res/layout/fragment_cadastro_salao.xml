<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/constraintLayout"
    tools:context="br.udesc.oagendador.ui.CadastroSalaoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome do Salão">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50px"
                android:layout_marginLeft="50px"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Endereço">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EnderecoSalao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:textSize="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50px"
                android:layout_marginLeft="50px"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/HorariosSalao"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="65px"
            android:layout_marginTop="20dp"
            android:text="Horários de Funcionamento:" />

        <ca.antonious.materialdaypicker.MaterialDayPicker
            android:id="@+id/dayPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"        />

        <ListView
            android:id="@+id/list_horarios_salao"
            android:layout_width="match_parent"
            android:layout_height="200dp"></ListView>

    </LinearLayout>
</FrameLayout>